<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.korit.library.repository.AccountRepository">
    <resultMap id="userMst" type="com.korit.library.web.dto.UserDto">
<!--       property = UserDto안에 있는 변수명들을 넣어줌-->
<!--       column = select에 선언하는 이름명들을 넣어줌-->
        <result property="userId" column="user_id"></result>
        <result property="userName" column="username"></result>
        <result property="password" column="password"></result>
        <result property="name" column="name"></result>
        <result property="email" column="email"></result>
        <result property="createData" column="create_data"></result>
        <result property="updateData" column="update_data"></result>
        <collection property="roleDtlDto" javaType="list" resultMap="roleDtl"></collection>
    </resultMap>
    
    <resultMap id="roleMst" type="com.korit.library.web.dto.RoleMstDto">

    </resultMap>

    <resultMap id="roleDtl" type="com.korit.library.web.dto.RoleDtlDto">
        <result property="roleDtlId" column="role_dtl_id"></result>
        <result property="userId" column="user_id"></result>
        <result property="roleId" column="role_id"></result>
        <result property="createData" column="create_data"></result>
        <result property="updateData" column="update_data"></result>
    </resultMap>


    <select id="findUserByUsername" parameterType="String" resultMap="userMst">
        select
            um.user_id,
            um.username,
            um.password,
            um.name,
            um.email,

            rd.role_id,
            rm.role_name,

            um.create_date,
            um.update_date
        from
            user_mst um
            left outer join role_dtl rd on(rd.user_id = um.user_id)
            left outer join role_mst rm on(rm.role_id = rd.role.id)
        where
            um.username = #{username}
    </select>
</mapper>